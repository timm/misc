#!/usr/bin/env bash
## help sh/ow : x.py : make pdf of python code

pdf="$HOME/tmp/$(basename "${1%.*}").pdf"

echo "pdf-ing $pdf ... "
a2ps                        \
  --file-align=virtual       \
	--line-numbers=1            \
	--pro=color                  \
	--pretty=python               \
	--chars-per-line=70            \
	--left-title=""                 \
	--borders=no                     \
  --right-footer="page %s. of %s#"  \
	--portrait                         \
	--columns 2                         \
	-M letter                            \
	-o - $1 | ps2pdf - $pdf
open $pdf
