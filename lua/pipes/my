alias vim="nvim -u u -p "
alias gp="git commit -am saving; git push; git status"

pdf() {
	mkdir -p ~/tmp
	echo "pdf-ing $@ ... "
	a2ps                 \
		-Br                 \
		--chars-per-line 105  \
		--file-align=fill      \
		--line-numbers=1        \
		--borders=no             \
		--pro=color               \
		--pretty-print="lua.ssh" \
		--columns  3                 \
		-M letter                     \
	  -o	 ~/tmp/$1.ps $1.lua
	ps2pdf ~/tmp/$1.ps ~/tmp/$1.pdf;  rm ~/tmp/$1.ps
}


