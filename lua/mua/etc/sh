redgreen() { gawk '
     /^---/ { $0="\033[01;36m"$0"\033[0m" }
     /FAIL/ { bad++; $0="\033[31m"$0"\033[0m" }
     /PASS/ {        $0="\033[32m"$0"\033[0m" }
            { print $0                 }
     END    { exit bad!=0 }'
}

if [ "$1" == "-t" ]; then
  date +"%r"
  echo -e "\e[1m\e[30m\e[40m"
  art | gawk '
   BEGIN {srand('$RANDOM'); RS="";FS=""}
         {N[rand()] = $0}
   END   {for(i in N) { print N[i]; break}}'
  echo -e "\033[0m" 
  cd $Src/src
  for f in *.lua; do
    echo "------------- $f"
    g=${f%.*}
    lua -e "x=require('$g').tests()"
  done | redgreen
  exit $?
fi

