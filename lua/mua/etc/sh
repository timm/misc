#!/usr/bin/env bash

# misc convenient shortcuts

Src=$(cd $( dirname "${BASH_SOURCE[0]}" ) && pwd )/..
chmod +x $Src/etc/sh
mkdir -p $Src/src $Src/docs

alias ls="ls -G"
alias gp="git add *; git commit -am saving; git push; git status"
alias oks="$Src/etc/sh -t"
alias okspy="(rerun '$Src/etc/sh -t')"

docs() {
  (cd $Src/src; pycco -d $Src/docs *.lua)
  markdown $Src/README.md > $Src/docs/index.html
  cp $Src/etc/pycco.css $Src/docs
}


art() { cat<<'EOF'
  oO)-.                       .-(Oo
 /__  _\                     /_  __\
 \  \(  |     ()~()         |  )/  /
  \__|\ |    (-___-)        | /|__/
  '  '--'    ==`-'==        '--'  '

     .--.
    |o_o |
    |:_/ |
   //   \ \
  (|     | )
 /'\_   _/`\
 \___)=(___/

                                   .::!!!!!!!:.
 .!!!!!:.                        .:!!!!!!!!!!!!
 ~~~~!!!!!!.                 .:!!!!!!!!!UWWW$$$
     :$$NWX!!:           .:!!!!!!XUWW$$$$$$$$$P
     $$$$$##WX!:      .<!!!!UW$$$$"  $$$$$$$$#
     $$$$$  $$$UX   :!!UW$$$$$$$$$   4$$$$$*
     ^$$$B  $$$$\     $$$$$$$$$$$$   d$$R"
       "*$bd$$$$      '*$$$$$$$$$$$o+#"
            """"          """""""

         /'._     _,
         \   ;__.'  }
     (`-._;-" _.--.}'
     /_'    /`    _}     _.--"""-.
       `.   \_._.;     .'         \
         '-.__ /      /            |
 jgs      _/  `\      \            /
         ^`   ^`       '._       .'
                          `"""""``

      _.---._..-""""""-.
   .-" o   -.           `.
   `._     -'             \
     _`";`                 |  
    '-'__\  \     _.-'     /__
      '-'---'--'``\__, _.-'--""-.
 jgs               (.-'        ,-`

      ,____________,
      .'          '.
     /~~~~^~~~^~^~~~\
    /      _    /||  \
   ;      ( }   \||D  ;
   |    | /\__,=[_]   |
   ;  ( |_\_  |---|   ;
    \  )|  |/ |   |  /
 jgs '. |  /_ |   |.'
      '------------'

          '\                   .  . 
            \              .         ' .
           O>>         .                 'o
            \       . 
            /\    .  
           / /  .'                           
 ^^^^^jgs^^^^^^^`^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^

   __
